{
    "typeName": "Dotmatics::SSO::GroupInfo",
    "description": "Reads SSO group from AWS SSO and exposes attributes that can be used by other resources",
    "replacementStrategy": "create_then_delete",
    "tagging": {
        "taggable": false
    },
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-rpdk.git",
    "definitions": {
    },
    "properties": {
        "GroupName": {
            "description": "A GroupName that exists within AWS SSO. Any ASCII character - Dotmatics",
            "type": "string"

        },
        "IdentityStoreId": {
            "description": "The Identity Store ID to help find the group name.",
            "type": "string"

        },
        "GroupId": {
            "description": "The GroupId found based on the GroupName.",
            "type": "string"

        },
        "GeneratedReadOnlyId": {
            "description": "The generated read-only identifier.",
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "GroupName",
        "IdentityStoreId"
    ],
    "readOnlyProperties": [
        "/properties/GroupId",
        "/properties/GeneratedReadOnlyId"
    ],
    "primaryIdentifier": [
        "/properties/GeneratedReadOnlyId"
    ],
    "handlers": {
        "create": {
