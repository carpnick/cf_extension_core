                "dynamodb:UpdateItem",
                "dynamodb:UpdateTable",
                "dynamodb:DescribeTable",

                "identitystore:ListGroups",
                "identitystore:DescribeGroup"
            ]
        },
        "update": {
            "permissions": [
                "dynamodb:CreateTable",
                "dynamodb:PutItem",
                "dynamodb:DeleteItem",
                "dynamodb:GetItem",
                "dynamodb:UpdateItem",
                "dynamodb:UpdateTable",
                "dynamodb:DescribeTable",

                "identitystore:ListGroups",
                "identitystore:DescribeGroup"
            ]
        },
        "read": {
            "permissions": [
                "dynamodb:CreateTable",
                "dynamodb:PutItem",
                "dynamodb:DeleteItem",
                "dynamodb:GetItem",
                "dynamodb:UpdateItem",
                "dynamodb:UpdateTable",
                "dynamodb:DescribeTable",

                "identitystore:DescribeGroup"
            ]
        },
        "delete": {
            "permissions": [
                "dynamodb:CreateTable",
                "dynamodb:PutItem",
                "dynamodb:DeleteItem",
                "dynamodb:GetItem",
                "dynamodb:UpdateItem",
                "dynamodb:UpdateTable",
